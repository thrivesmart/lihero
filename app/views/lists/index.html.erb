<p id="notice"><%= notice %></p>

<% content_for :page_title do %>
Lists - 
<% end %>
<div class="container">
<div class="page-header">
<h1>
<div class="pull-left">
<%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, "/", class: "btn btn-default", title: "Back" %>
&nbsp;
</div>

<div class="pull-right">
<%= link_to "<span class=\"glyphicon glyphicon-plus-sign\" aria-hidden=\"true\"></span> New List".html_safe, [:new, :List], class: "btn btn-success" %>
</div>
Listing Lists
</h1>
</div>

<table class="table table-striped table-hover tablesorter" id="Lists-table">


  <thead>
<tr>
    
      <th><span>Organization</span></th>
      <th><span>Name</span></th>
      <th><span>Permalink</span></th>
      <th><span>Description</span></th>
      <th><span>Picurl</span></th>
      <th><span>Creator</span></th>
      
    </tr>
  </thead>

  <tbody>
    <% unless @lists.any? %>
<tr id="empty-table">
<td class="bg-warning" colspan="2">No lists created yet.</td>
</tr>
<% end %>
<% @lists.each do |list| %>
<tr class="linked-row" data-href="<%= list_path(list) %>">
      
        <td><%= link_to list.organization, list %></td>
        <td><%= link_to list.name, list %></td>
        <td><%= link_to list.permalink, list %></td>
        <td><%= link_to list.description, list %></td>
        <td><%= link_to list.picurl, list %></td>
        <td><%= link_to list.creator, list %></td>
        
        
        
      </tr>
    <% end %>
  </tbody>
</table>





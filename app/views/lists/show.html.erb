<% content_for :page_title do %>
List Details - 
<% end %>
<div class="container">
	<div class="page-header">
		<h1>
			<div class="pull-left">
				<%= link_to "<span class=\"glyphicon glyphicon-step-backward\" aria-hidden=\"true\"></span>".html_safe, organization_lists_path(@list.organization), class: "btn btn-default", title: "Back to lists" %>
				&nbsp;
			</div>
			<div class="pull-right">
				<%= link_to "<span class=\"glyphicon glyphicon-pencil\" aria-hidden=\"true\"></span> Edit".html_safe, edit_organization_list_path(@list.organization, @list), class: "btn btn-warning" %>
			</div>
			
			<% unless @list.picurl.blank? %>
				<%= image_tag(@list.picurl) %>
			<% end %>
			
			List Details
		</h1>
	</div>

	<div class="row">
		<label class="col-sm-3 text-right text-muted">Name</label>
		<div class="col-sm-9"><%= @list.name %></div>
	</div>

	<div class="row">
		<label class="col-sm-3 text-right text-muted">&nbsp;</label>
		<div class="col-sm-9"><small><span class="text-muted"><%= organization_lists_url(@organization) %>/</span><%= @list.permalink %> (<%= link_to 'link', [@list.organization, @list] %>)</small></div>
	</div>

	<div class="row">
		<label class="col-sm-3 text-right text-muted">Description</label>
		<div class="col-sm-9"><%= @list.description.blank? ? '<span class="text-muted">[none]</span>'.html_safe : @list.description %></div>
	</div>

	<div class="row">
		<label class="col-sm-3 text-right text-muted">Member Since</label>
		<div class="col-sm-9"><%= distance_of_time_in_words_to_now @list.created_at %> ago</div>
	</div>
	<div class="row">
		<label class="col-sm-3 text-right text-muted">Added By</label>
		<div class="col-sm-9"><%= @list.creator.full_name %></div>
	</div>

</div>


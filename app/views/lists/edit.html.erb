<% content_for :page_title do %>
Edit List - 
<% end %>
<div class="container">
	<div class="page-header">
		<h1>Editing List</h1>
	</div>

	<%= render 'form' %>

	<div class="clearfix"></div>
	<div class="pull-left">
		<%= link_to "<span class=\"glyphicon glyphicon-ban-circle\" aria-hidden=\"true\"></span> Cancel".html_safe, [@list.organization, @list], class: "btn btn-default" %>
	</div>
	<div class="pull-right">
		<%= link_to "<span class=\"glyphicon glyphicon-trash\" aria-hidden=\"true\"></span> Delete list...".html_safe, [@list.organization, @list], method: :delete, data: { confirm: "Are you sure you want to delete this list?" }, class: "btn btn-danger" %>
	</div>
</div>

<!DOCTYPE html>
<html>
<head>
  <title><%= yield :page_title %>Lihero</title>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet"><%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  
  <%= csrf_meta_tags %>
  <%= yield :after_css %>
</head>
<body class="controller-<%= controller.controller_name.dasherize %> action-<%= controller.action_name.dasherize %>">  <nav class="navbar navbar-default navbar-inverse" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/">Foo</a>
      </div>
      <div id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
          <li<%= request.path == "/" ? " class=\"active\"".html_safe : "" %>><a href="/">Home</a></li>
        </ul> 
        <ul class="nav navbar-nav navbar-right">
          <li class="bar"><a href="/">Bar</a></li>
        </ul>
      </div>
    </div>
  </nav>
  <% unless notice.blank? %>
    <div id="notice" class="alert alert-success" role="alert">
      <div class="container">
        <%= notice %>
      </div>
    </div>
  <% end %>

<%= yield %>
    <footer id="content-footer" role="contentinfo">
      <div class="container">
        <p class="align-center">
          Copyright &copy; <%= Time.now.year %> Foo Â· all rights reserved.
        </p>
      </div>
    </footer>

    <%= yield :before_js %>
    <% unless ENV["GOOGLE_ANALYTICS_ID"].blank? %>
    <script>
      (function(i,s,o,g,r,a,m){i["GoogleAnalyticsObject"]=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,"script","//www.google-analytics.com/analytics.js","ga");
      ga("create", "<%= ENV["GOOGLE_ANALYTICS_ID"] %>", "auto");
      ga("send", "pageview");
    </script>
    <% end %>
    <script src="//code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="//code.jquery.com/ui/1.11.2/jquery-ui.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"></script>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
<%= yield :after_js %>


</body>
</html>

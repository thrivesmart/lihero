<% content_for :page_title do %>
Edit Lead - 
<% end %>
<div class="container">
	<div class="page-header">
		<h1>Editing Lead</h1>
	</div>

	<%= render 'form' %>

	<div class="clearfix"></div>
	<div class="pull-left">
		<%= link_to "<span class=\"glyphicon glyphicon-ban-circle\" aria-hidden=\"true\"></span> Cancel".html_safe, [@lead.list.organization, @lead.list, @lead], class: "btn btn-default" %>
	</div>
	<div class="pull-right">
		<%= link_to "<span class=\"glyphicon glyphicon-trash\" aria-hidden=\"true\"></span> Delete lead...".html_safe, [@lead.list.organization, @lead.list, @lead], method: :delete, data: { confirm: "Are you sure you want to delete this lead?" }, class: "btn btn-danger" %>
	</div>
</div>
